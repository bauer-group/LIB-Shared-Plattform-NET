<UserControl x:Class="BAUERGROUP.Shared.Desktop.Browser.Internet.IEWebbrowserControl"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Button x:Name="closeButton" Content="Schließen" Margin="0,0,10,10" Grid.Row="1" VerticalAlignment="Bottom" Height="25" HorizontalAlignment="Right" Width="75" Click="ButtonClose_Click" />
        <WebBrowser Name="mainBrowser" Margin="5" Navigating="mainBrowser_Navigating" LoadCompleted="mainBrowser_LoadCompleted" />
        <Button x:Name="navigateBackButton" Margin="10,0,0,10" Grid.Row="1" VerticalAlignment="Bottom" Height="25" HorizontalAlignment="Left" Width="25" Command="NavigationCommands.BrowseBack" Background="#FFD4D0C8">
            <StackPanel>
                <Image Source="/BAUERGROUP.Shared.Desktop;component/Images/Internet/EmbeddedBrowser/ArrowBack_16.png"/>
            </StackPanel>
        </Button>
        <Button x:Name="navigateForwardButton" Margin="40,0,0,10" Grid.Row="1" VerticalAlignment="Bottom" Height="25" HorizontalAlignment="Left" Width="25" Command="NavigationCommands.BrowseForward">
            <StackPanel>
                <Image Source="/BAUERGROUP.Shared.Desktop;component/Images/Internet/EmbeddedBrowser/ArrowForward_16.png"/>
            </StackPanel>
        </Button>
        <Button x:Name="reloadButton" Margin="80,0,0,10" Grid.Row="1" VerticalAlignment="Bottom" Height="25" HorizontalAlignment="Left" Width="25" Command="NavigationCommands.GoToPage">
            <StackPanel>
                <Image Source="/BAUERGROUP.Shared.Desktop;component/Images/Internet/EmbeddedBrowser/ArrowLoad_16.png"/>
            </StackPanel>
        </Button>
        <TextBox x:Name="urlTextBox" Margin="160,0,132,10" Grid.Row="1" Height="23" VerticalAlignment="Bottom" KeyUp="urlTextBox_KeyUp"/>
        <Button x:Name="navigateButton" Margin="0,0,102,10" Grid.Row="1" VerticalAlignment="Bottom" Height="25" Command="NavigationCommands.GoToPage" HorizontalAlignment="Right" Width="25">
            <StackPanel>
                <Image Source="/BAUERGROUP.Shared.Desktop;component/Images/Internet/EmbeddedBrowser/Browse_16.png"/>
            </StackPanel>
        </Button>
        <Button x:Name="printButton" Margin="120,0,0,10" Grid.Row="1" VerticalAlignment="Bottom" Height="25" HorizontalAlignment="Left" Width="25" Command="ApplicationCommands.Print">
            <StackPanel>
                <Image Source="/BAUERGROUP.Shared.Desktop;component/Images/Internet/EmbeddedBrowser/Print_16.png"/>
            </StackPanel>
        </Button>
    </Grid>
    <UserControl.CommandBindings>
        <CommandBinding Command="NavigationCommands.BrowseBack" CanExecute="NavigateBack_CanExecute" Executed="NavigateBack_Executed" />
        <CommandBinding Command="NavigationCommands.BrowseForward" CanExecute="NavigateForward_CanExecute" Executed="NavigateForward_Executed" />
        <CommandBinding Command="NavigationCommands.GoToPage" CanExecute="Navigate_CanExecute" Executed="Navigate_Executed" />
        <CommandBinding Command="ApplicationCommands.Print" CanExecute="Print_CanExecute" Executed="Print_Executed" />
    </UserControl.CommandBindings>
</UserControl>
