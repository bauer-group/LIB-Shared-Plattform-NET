<UserControl x:Class="BAUERGROUP.Shared.Desktop.Browser.Internet.ChromeWebbrowserControl"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BAUERGROUP.Shared.Desktop.Browser.Internet"
             xmlns:chromewpf="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
             xmlns:chrome="clr-namespace:CefSharp;assembly=CefSharp.Core"
             xmlns:behaviours="clr-namespace:BAUERGROUP.Shared.Desktop.Behaviours;assembly=BAUERGROUP.Shared.Desktop"
             xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid x:Name="containerGrid" Grid.Row="0" Background="Transparent">
            <Grid x:Name="browserGrid" Background="Transparent">
                <Border Grid.Row="1" BorderThickness="0.5">
                    <Border.BorderBrush>
                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveBorderColorKey}}"/>
                    </Border.BorderBrush>
                    <chromewpf:ChromiumWebBrowser Name="mainBrowser" Width="{Binding ActualWidth, ElementName=browserGrid, Mode=OneWay}" Height="{Binding ActualHeight, ElementName=browserGrid, Mode=OneWay}"/>
                </Border>
            </Grid>
        </Grid>
        <Button x:Name="closeButton" Content="Schließen" Margin="0,0,10,10" Grid.Row="2" VerticalAlignment="Bottom" Height="25" HorizontalAlignment="Right" Width="75" Click="ButtonClose_Click" />
        <Button x:Name="navigateBackButton" Margin="10,0,0,10" Grid.Row="2" VerticalAlignment="Bottom" Height="25" HorizontalAlignment="Left" Width="25" Command="{Binding WebBrowser.BackCommand, ElementName=mainBrowser}" Background="#FFD4D0C8">
            <StackPanel>
                <Image Source="/BAUERGROUP.Shared.Desktop;component/Images/Internet/EmbeddedBrowser/ArrowBack_16.png"/>
            </StackPanel>
        </Button>
        <Button x:Name="navigateForwardButton" Margin="40,0,0,10" Grid.Row="2" VerticalAlignment="Bottom" Height="25" HorizontalAlignment="Left" Width="25" Command="{Binding WebBrowser.ForwardCommand, ElementName=mainBrowser}">
            <StackPanel>
                <Image Source="/BAUERGROUP.Shared.Desktop;component/Images/Internet/EmbeddedBrowser/ArrowForward_16.png"/>
            </StackPanel>
        </Button>
        <Button x:Name="reloadButton" Margin="80,0,0,10" Grid.Row="2" VerticalAlignment="Bottom" Height="25" HorizontalAlignment="Left" Width="25" Command="{Binding WebBrowser.ReloadCommand, ElementName=mainBrowser}">
            <StackPanel>
                <Image Source="/BAUERGROUP.Shared.Desktop;component/Images/Internet/EmbeddedBrowser/ArrowLoad_16.png"/>
            </StackPanel>
        </Button>
        <TextBox x:Name="urlTextBox" Margin="160,0,102,10" Grid.Row="2" Height="23" VerticalAlignment="Bottom" Text="{Binding Address, ElementName=mainBrowser}" GotFocus="urlTextBox_GotFocus" PreviewMouseDown="urlTextBox_PreviewMouseDown">
            <behaviors:Interaction.Behaviors>
                <behaviours:TextBoxBindingUpdateOnEnterBehaviour />
            </behaviors:Interaction.Behaviors>
        </TextBox>
        <Button x:Name="printButton" Margin="120,0,0,10" Grid.Row="2" VerticalAlignment="Bottom" Height="25" HorizontalAlignment="Left" Width="25" Command="{Binding WebBrowser.PrintCommand, ElementName=mainBrowser}">
            <StackPanel>
                <Image Source="/BAUERGROUP.Shared.Desktop;component/Images/Internet/EmbeddedBrowser/Print_16.png"/>
            </StackPanel>
        </Button>
        <!--
        <TextBlock HorizontalAlignment="Right" TextAlignment="Right" Grid.Column="3" VerticalAlignment="Center">
                Chromium: <Run Text="{Binding Source={x:Static cef:Cef.ChromiumVersion}, Mode=OneTime}" />, CEF: <Run Text="{Binding Source={x:Static cef:Cef.CefVersion}, Mode=OneTime}" />, CefSharp: <Run Text="{Binding Source={x:Static cef:Cef.CefSharpVersion}, Mode=OneTime}"/>, Environment: <Run Text="{Binding Converter={StaticResource EnvironmentConverter}, Mode=OneTime}"/>
                </TextBlock>
        -->
    </Grid>
</UserControl>
