<UserControl x:Class="BAUERGROUP.Shared.Desktop.Logging.LogMessageReceiverControl"
             x:ClassModifier="public"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BAUERGROUP.Shared.Desktop.Logging"
             xmlns:behaviours="clr-namespace:BAUERGROUP.Shared.Desktop.Behaviours"
             xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="800" IsVisibleChanged="UserControl_IsVisibleChanged">
    <Grid x:Name="containerGrid">
        <TextBox x:Name="loggingTextBlock" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</UserControl>
