<Window x:Class="BAUERGROUP.Shared.Desktop.Dialogs.InputForm"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input Box" Height="130" Width="300" Icon="/BAUERGROUP.Shared.Desktop;component/Images/Application.ico" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBox x:Name="tbData" Height="46" Margin="10,10,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Button x:Name="btnCancel" Content="Abbruch" Margin="0,65,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75" IsCancel="True" Click="btnCancel_Click"/>
        <Button x:Name="btnOk" Content="Ok" Margin="0,65,100,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75" IsDefault="True" Click="btnOk_Click"/>
    </Grid>
</Window>
